@model IList<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Listas de Contacto
    </div>
    <div class="card-body">
       <a asp-action="Guardar" asp-controller="SuperHome" class="btn btn-success"> Crear Nuevo Contacto </a>
       <hr/>
       <table class="table table-bordered">
           <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>
                        
                    </th>
                </tr>
           </thead>
           <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Telefono</td>
                            <td>@item.Correo</td>
                            <td>
                                <a asp-action="Editar" asp-controller="SuperHome" class="btn btn-primary  btn-sm" asp-route-Idcontacto="@item.IdContacto"> editar </a>
                                <a asp-action="eliminar" asp-controller="SuperHome" class="btn btn-danger btn-sm" asp-route-Idcontacto="@item.IdContacto"> eliminar </a>
                            </td>
                        </tr>
                    }
                </tbody>
       </table>

    </div>
</div>

